{% set classes = [
  {
    id: 932,
    date: "Dec 09, 2020",
    time: "9:00 am - 5:00 pm"
  },
  {
    id: 894,
    date: "Mar 20, 2021",
    time: "9:00 am - 5:00 pm"
  }
]%}

{% set class_details = [] %}
{% for class in classes %}
  {% set content %}
    <p class="cu-checkbutton__content--date">{{ class.date }}</p>
    <time class="cu-checkbutton__content--time">{{ class.time }}</time>
  {% endset %}
  {% set class_details = class_details|merge([{
      id: class.id,
      content: content
    }]) %}
{% endfor %}

{% include '@union/_registration-form.twig' with {
  events: class_details
} only %}
