{{ attach_library('union_organizer/card') }}
{% set attributes = union_attributes(attributes|default([])) %}
{% set attributes = attributes.addClass(['cu-card']) %}
{% set content_attributes = union_attributes(content_attributes|default([])) %}
{% set content_attributes = content_attributes.addClass(['cu-card__content']) %}
{% set link_attributes = union_attributes(link_attributes|default([])) %}
{% set link_attributes = link_attributes.addClass(['cu-card__link']) %}

<div{{ attributes }}>
  <div{{ content_attributes }}>
    {{ card_content }}
  </div>
{% if card_media %}
  <div class="cu-card__media">
    {{ card_media }}
  </div>
{% endif %}
{% if card_link_url %}
  <a{{ link_attributes }} href="{{ card_link_url }}">{{ card_link_alt }}</a>
{% endif %}
</div>

